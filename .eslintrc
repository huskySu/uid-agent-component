{
  "env": {
    "browser": true
  },
  "root": true,
  "extends": [
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@babel/eslint-parser",
  "plugins": ["prettier", "react-hooks"],
  "settings": {
    "import/resolver": {
      "node": {},
      "webpack": {
        "config": "webpack/webpack.common.js",
        "cloud": "src/cloud",
        "local": "src/local",
        "shared": "src/shared"
      }
    },
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": [
      "warn",
      {
        "additionalHooks": "(useShallowCompareEffect|useCustomCompareEffect|useDeepCompareEffect)"
      }
    ],
    "react/button-has-type": "error",
    "semi": 2,
    "react/jsx-filename-extension": 0,
    "react/destructuring-assignment": 0,
    "react/forbid-prop-types": 0,
    "react/jsx-wrap-multilines": 0,
    "import/prefer-default-export": 0,
    "no-underscore-dangle": 0,
    "camelcase": 0,
    "no-void": 1,
    "react/prefer-stateless-function": 0,
    "react/jsx-props-no-spreading": 0,
    "react/state-in-constructor": ["error", "never"],
    "no-unused-expressions": 1,
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsFor": ["draftState", "draftDevice"]
      }
    ]
  },
  "overrides": [
    {
      "extends": ["plugin:@typescript-eslint/recommended"],
      "files": ["src/**/*.ts", "src/**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": ["tsconfig.json"],
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
      },
      "rules": {
        // https://github.com/typescript-eslint/typescript-eslint/blob/master/packages/eslint-plugin/docs/rules/no-use-before-define.md#how-to-use
        "no-use-before-define": "off",
        "@typescript-eslint/no-use-before-define": ["error"],
        "react/prop-types": "off"
      }
    }
  ],
  "globals": {
    "__config__": false,
    "__VERSION__": false,
    "__EMOTION_PREFIX__": false,

    "__CLOUD__": false,
    "__LOCAL__": false,

    "__DEV__": false,
    "__PRD__": false,
    "__CONFIG_ENV__": false,

    "__SENTRY_ENV__": false,

    "__USER_ID__": true
  }
}
